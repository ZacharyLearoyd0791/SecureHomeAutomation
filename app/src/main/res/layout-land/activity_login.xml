<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_image"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/login_page_email_textBox"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_below="@id/Login_page_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/enter_your_email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/login_page_password_textBox"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_page_email_textBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/Login_page_title"
        android:layout_width="213dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_page_login_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#aef5dd"
        android:layout_alignEnd="@id/login_page_password_textBox"
        android:text="@string/login_btn"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/loginForgotPassword"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/login_page_password_textBox"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/login_page_password_textBox"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/forgot_password"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/loginDoNotHaveAccountText"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="@string/don_t_have_an_account"
        android:textSize="13sp"
        />

    <TextView
        android:layout_marginBottom="8dp"
        android:id="@+id/loginCreateAccountHereTextClickable"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:clickable="true"
        android:gravity="left|center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/loginDoNotHaveAccountText"
        android:text="@string/register_here"
        android:textColor="#23adfc"
        android:textSize="13sp" />

</RelativeLayout>