<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Homefrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/greenDoor"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="164dp"
            android:contentDescription="@string/doorinfo"
            android:src="@drawable/green_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/greenTemp"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="34dp"
            android:contentDescription="@string/g_temp_info"
            android:src="@drawable/green_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/greenLight"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="@string/g_light_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenDoor"
            app:srcCompat="@drawable/green_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/greenWindow"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="@string/g_window_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_press_temp"
            app:srcCompat="@drawable/green_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/tempInfo"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="34dp"
            android:contentDescription="@string/r_temp_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/doorInfo"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="164dp"
            android:contentDescription="@string/r_door_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/lightInfo"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="@string/r_light_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenDoor"
            app:srcCompat="@drawable/red_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/windowInfo"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="@string/r_window_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenTemp"
            app:srcCompat="@drawable/red_gradient" />

        <ImageView
            android:id="@+id/iv_press_temp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="36dp"
            android:contentDescription="@string/temppress"
            android:src="@drawable/temp_button_pressed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_press_lock"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="168dp"
            android:contentDescription="@string/lockpress"
            android:src="@drawable/lock_button_pressed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home_icon"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:layout_marginStart="332dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/homeicon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/iv_press_window"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="131dp"
            android:background="@null"
            android:contentDescription="@string/windowspressed"
            android:scaleType="fitCenter"
            android:src="@drawable/window_button_pressed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenTemp"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <ImageButton
            android:id="@+id/window_Btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="131dp"
            android:background="@null"
            android:contentDescription="@string/windows"
            android:scaleType="fitCenter"
            android:src="@drawable/window_custom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenTemp" />

        <ImageView
            android:id="@+id/iv_press_light"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="131dp"
            android:contentDescription="@string/lightpressed"
            android:src="@drawable/light_button_pressed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenDoor" />

        <ImageButton
            android:id="@+id/light_Btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="131dp"
            android:background="@null"
            android:contentDescription="@string/lightbtn"
            android:scaleType="fitCenter"
            android:src="@drawable/light_custom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenDoor" />

        <ImageButton
            android:id="@+id/temp_Btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="36dp"
            android:background="@null"
            android:contentDescription="@string/tempbtn"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/lock_Btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="168dp"
            android:background="@null"
            android:contentDescription="@string/lockbtn"
            android:scaleType="fitCenter"
            android:src="@drawable/lock_custom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/home"
            android:textColor="#CEFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quick_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="@string/quick_access_menu"
            android:textColor="#CEFFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DoorStatusTVH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/greenLight"
            app:layout_constraintEnd_toStartOf="@+id/TempStatusTVH"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenDoor"
            app:layout_constraintVertical_bias="0.047" />

        <TextView
            android:id="@+id/TempStatusTVH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/greenWindow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_press_temp"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/LightStatusTVH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenLight"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/WindowsStatusTVH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/LightStatusTVH"
            app:layout_constraintTop_toBottomOf="@+id/greenWindow"
            app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>