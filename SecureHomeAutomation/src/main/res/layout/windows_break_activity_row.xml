<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/window_break_activity_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="402dp"
        android:layout_height="123dp"

        android:elevation="20dp"
        app:cardCornerRadius="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/window_break_alarm_icon"
                android:layout_width="87dp"
                android:layout_height="86dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_windows_break_acknowledge_icon" />

            <TextView
                android:id="@+id/windows_break_alarm_title"
                android:layout_width="92dp"
                android:layout_height="34dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"

                android:text="Alarm type: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_margin="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Date: " />

            <TextView
                android:id="@+id/windows_break_alarm_discription"
                android:layout_width="126dp"
                android:layout_height="71dp"
                android:layout_marginTop="52dp"
                android:layout_margin="0dp"
                android:layout_marginStart="0dp"
                android:text="Description: "
                android:textStyle="italic" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

