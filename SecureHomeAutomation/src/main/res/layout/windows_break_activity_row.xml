<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="402dp"
        android:layout_height="123dp"

        android:elevation="20dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/window_break_alarm_icon"
                android:layout_width="87dp"
                android:layout_height="86dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_windows_break_acknowledge_icon" />

            <TextView
                android:id="@+id/windows_break_alarm_title"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:text="Alarm type: "
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/window_break_alarm_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/windows_break_location"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Location: "
                app:layout_constraintStart_toEndOf="@+id/window_break_alarm_icon"
                app:layout_constraintTop_toBottomOf="@+id/windows_break_alarm_title" />

            <TextView
                android:id="@+id/windows_break_alarm_discription"
                android:layout_width="123dp"
                android:layout_height="85dp"
                android:layout_marginStart="263dp"
                android:layout_marginTop="20dp"
                android:text="Description: "
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Date: "
                app:layout_constraintBottom_toTopOf="@+id/window_break_alarm_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

