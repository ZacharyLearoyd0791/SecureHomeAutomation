<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/window_break_activity_row"
    android:layout_width="match_parent"
    android:paddingBottom="25dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="362dp"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardCornerRadius="40dp">


        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/window_break_alarm_icon"
                android:layout_width="57dp"
                android:layout_height="76dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_windows_break_acknowledge_icon" />

            <TextView
                android:id="@+id/windows_break_alarm_date"
                android:layout_width="116dp"
                android:layout_height="70dp"
                android:gravity="center|start"
                android:layout_margin="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="18dp"
                android:text="Date: " />

            <TextView
                android:id="@+id/windows_break_alarm_title"
                android:layout_width="114dp"
                android:layout_height="76dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:text="Alarm type"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

