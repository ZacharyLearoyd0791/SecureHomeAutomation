<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/editProfileTile"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:text="@string/edit_your_profile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="103dp"
        android:layout_height="121dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="68dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editProfileImageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit_profile_icon" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="141dp"
        android:layout_height="137dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        android:paddingStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/profile_animation"
        app:lottie_renderMode="automatic"
        app:lottie_speed="0.65" />


    <EditText
        android:id="@+id/editProfilePersonName"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/your_name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationView" />

    <EditText
        android:id="@+id/editProfilePersonEmail"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/your_email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePersonName" />


    <EditText
        android:id="@+id/editProfilePersonPhone"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/your_phone_number"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePersonEmail" />

    <Button
        android:id="@+id/editProfileChangePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="@string/change_password"
        app:layout_constraintStart_toEndOf="@+id/editProfileSaveChanges"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePersonPhone" />

    <Button
        android:id="@+id/editProfileSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:text="@string/save_changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePersonPhone" />


</androidx.constraintlayout.widget.ConstraintLayout>