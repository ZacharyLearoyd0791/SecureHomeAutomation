<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@android:color/holo_green_light" />
        </shape>
    </item>
    <item>
        <inset android:inset="8dp">
            <shape android:shape="oval">
                <stroke
                    android:width="4dp"
                    android:color="@android:color/holo_green_dark" />
            </shape>

        </inset>
    </item>
    <item>
        <inset android:inset="8dp">
            <shape android:shape="oval">
                <stroke
                    android:width="4dp"
                    android:color="@android:color/holo_green_light" />
            </shape>

        </inset>
    </item>
</layer-list>